# Production Docker Compose for Bisect Bot
# Auto-generated by Ansible - do not edit manually

version: "3.8"

services:
  # Reverse proxy with automatic HTTPS
  caddy:
    image: caddy:2-alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_data:/data
      - caddy_config:/config
    depends_on:
      - web
      - bot
    networks:
      - frontend
    restart: unless-stopped
    cap_drop:
      - ALL
    cap_add:
      - NET_BIND_SERVICE
    read_only: true
    tmpfs:
      - /tmp:size=64m

  # Redis for job queue
  redis:
    image: redis:7-alpine
    volumes:
      - redis_data:/data
    command: >
      redis-server
      --appendonly yes
      --requirepass ${REDIS_PASSWORD}
      --maxmemory 256mb
      --maxmemory-policy allkeys-lru
    healthcheck:
      test: ["CMD", "redis-cli", "-a", "${REDIS_PASSWORD}", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - backend
    restart: unless-stopped
    cap_drop:
      - ALL
    read_only: true
    tmpfs:
      - /tmp:size=64m

  # Web application (user dashboard)
  web:
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
      - GITHUB_CLIENT_SECRET=${GITHUB_CLIENT_SECRET}
      - GITHUB_APP_ID=${GITHUB_APP_ID}
      - GITHUB_APP_SLUG=${GITHUB_APP_SLUG}
      - SECRET_KEY=${SECRET_KEY}
      - BASE_URL=${BASE_URL}
      - REDIS_URL=${REDIS_URL}
      - ENCRYPTION_KEY=${ENCRYPTION_KEY}
    depends_on:
      redis:
        condition: service_healthy
    networks:
      - frontend
      - backend
    restart: unless-stopped
    cap_drop:
      - ALL
    security_opt:
      - no-new-privileges:true

  # Bisect bot (webhook handler)
  bot:
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - GITHUB_APP_ID=${GITHUB_APP_ID}
      - GITHUB_PRIVATE_KEY_PATH=/app/secrets/private-key.pem
      - GITHUB_WEBHOOK_SECRET=${GITHUB_WEBHOOK_SECRET}
      - REDIS_URL=${REDIS_URL}
      - DOCKER_RUNNER_IMAGE=bisect-runner:latest
      - BISECT_TIMEOUT_SECONDS=${BISECT_TIMEOUT_SECONDS:-1800}
      - ENCRYPTION_KEY=${ENCRYPTION_KEY}
    volumes:
      - ./secrets:/app/secrets:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    depends_on:
      redis:
        condition: service_healthy
      runner-build:
        condition: service_completed_successfully
    networks:
      - frontend
      - backend
      - docker
    restart: unless-stopped
    cap_drop:
      - ALL
    security_opt:
      - no-new-privileges:true

  # Bisect worker
  worker:
    build:
      context: .
      dockerfile: Dockerfile
    command: ["python", "-m", "app.worker"]
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - GITHUB_APP_ID=${GITHUB_APP_ID}
      - GITHUB_PRIVATE_KEY_PATH=/app/secrets/private-key.pem
      - GITHUB_WEBHOOK_SECRET=${GITHUB_WEBHOOK_SECRET}
      - REDIS_URL=${REDIS_URL}
      - DOCKER_RUNNER_IMAGE=bisect-runner:latest
      - BISECT_TIMEOUT_SECONDS=${BISECT_TIMEOUT_SECONDS:-1800}
      - ENCRYPTION_KEY=${ENCRYPTION_KEY}
    volumes:
      - ./secrets:/app/secrets:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    depends_on:
      redis:
        condition: service_healthy
      runner-build:
        condition: service_completed_successfully
    networks:
      - backend
      - docker
    deploy:
      replicas: {{ worker_replicas | default(2) }}
      resources:
        limits:
          cpus: "1"
          memory: 512M
        reservations:
          cpus: "0.25"
          memory: 256M
    restart: unless-stopped
    cap_drop:
      - ALL
    security_opt:
      - no-new-privileges:true

  # Build runner image on startup
  runner-build:
    image: docker:24-cli
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./docker:/build:ro
    command: docker build -t bisect-runner:latest -f /build/Dockerfile.runner /build
    networks: []
    restart: "no"

networks:
  frontend:
    driver: bridge
  backend:
    driver: bridge
    internal: true
  docker:
    driver: bridge
    internal: true

volumes:
  caddy_data:
  caddy_config:
  redis_data:





